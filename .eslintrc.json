{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["*.templ.js"],
    "rules": {
        "semi": [2, "always"],
        "linebreak-style": ["error", "unix"],
        "indent": ["error", "tab"],
        "no-tabs": 0,
        "no-unused-vars": 0,
        "no-invalid-this": "off",
        "max-len": [1, 500]
    }
}
