{
    "env": {
        "browser": true,
        "es2021": true
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "google",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["*.templ.js"],
    "rules": {
        "@typescript-eslint/ban-ts-comment": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-unused-vars": "off",
        "semi": [2, "always"],
        "linebreak-style": ["error", "unix"],
        "indent": ["error", "tab"],
        "no-tabs": 0,
        "no-unused-vars": 0,
        "no-invalid-this": "off",
        "max-len": [1, 500]
    }
}
