{
    "env": {
        "browser": true,
        "es2021": true
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "google",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["*.templ.js"],
    "rules": {
        "@typescript-eslint/ban-ts-comment": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "semi": [2, "always"],
        "linebreak-style": ["error", "unix"],
        "indent": [1, "tab"],
        "no-tabs": 0,
        "no-unused-vars": 0,
        "max-len": [1, 500]
    }
}
