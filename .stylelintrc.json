{
  "extends": "stylelint-config-standard",
  "customSyntax": "postcss-less",
  "rules": {
    "indentation": "tab",
    "selector-class-pattern": "^([a-z][a-z0-9-]*)(_?_[a-z0-9-]+)*",
    "rule-empty-line-before": [
      "always", {
        "except": ["inside-block-and-after-rule"]
      }
    ]
  }
}
